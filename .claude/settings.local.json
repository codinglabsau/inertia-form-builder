{
  "permissions": {
    "allow": [
      "Bash(npm install)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "say 'Form Builder needs your attention' -v 'Trinoids'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "say 'Form Builder task is complete' -v 'Trinoids'"
          }
        ]
      }
    ]
  }
}
